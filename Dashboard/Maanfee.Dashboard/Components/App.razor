@using Maanfee.Dashboard.Views.Core
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <ResourcePreloader />
    <link rel="stylesheet" href="@Assets["Maanfee.Dashboard.styles.css"]" />
    <link href="@Assets["_content/MudBlazor/MudBlazor.min.css"]" rel="stylesheet" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />

    @if (currentRenderMode == Microsoft.AspNetCore.Components.Web.RenderMode.InteractiveServer)
    {
        <HeadOutlet @rendermode="InteractiveServer" />
    }
    else if (currentRenderMode == Microsoft.AspNetCore.Components.Web.RenderMode.InteractiveWebAssembly)
    {
        <HeadOutlet @rendermode="InteractiveWebAssembly" />
    }
    else
    {
        <HeadOutlet @rendermode="InteractiveAuto" />
    }
</head>

<body>
    @if (currentRenderMode == Microsoft.AspNetCore.Components.Web.RenderMode.InteractiveServer)
    {
        <Routes @rendermode="InteractiveServer" />
    }
    else if (currentRenderMode == Microsoft.AspNetCore.Components.Web.RenderMode.InteractiveWebAssembly)
    {
        <Routes @rendermode="InteractiveWebAssembly" />
    }
    else
    {
        <Routes @rendermode="InteractiveAuto" />
    }

    <ReconnectModal />
    <script src="@Assets["_content/MudBlazor/MudBlazor.min.js"]"></script>
    <script src="@Assets["_framework/blazor.web.js"]"></script>
</body>

</html>

@code {

    [CascadingParameter]
    private IComponentRenderMode? CurrentRenderMode { get; set; }

    private IComponentRenderMode currentRenderMode => SharedLayoutSettings.RenderMode switch
        {
            Maanfee.Dashboard.Views.Core.RenderMode.Server => Microsoft.AspNetCore.Components.Web.RenderMode.InteractiveServer,
            Maanfee.Dashboard.Views.Core.RenderMode.WebAssembly => Microsoft.AspNetCore.Components.Web.RenderMode.InteractiveWebAssembly,
            _ => Microsoft.AspNetCore.Components.Web.RenderMode.InteractiveAuto
        };
}
